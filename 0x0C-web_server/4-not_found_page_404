sudo apt-get update
sudo apt-get -y install nginx
sudo ufw allow 'Nginx HTTP'
sudo echo "Hello World" > /var/www/html/index.nginx-debian.html
sudo sed -i '/listen \[::]:80 default_server;/a rewrite ^/redirect_me/ https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;' /etc/nginx/
sudo echo "Ceci n'est pas une page" > /usr/share/nginx/html/4-not_found_page_404
sudo sed -i '/listen 80 default_server;/a error_page 404 \/4-not_found_page_404;' /etc/nginx/sites-available/default 
sudo sed -i '/4-not_found_page_404;/a location = \/4-not_found_page_404 {root /usr/share/nginx/html; internal;}' /etc/nginx/sites-available/default
sudo service nginx restart